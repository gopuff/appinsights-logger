{
    "extends": "standard",
    "env": {
        "es6": true,
        "mocha": true,
        "node": true
    },
    "plugins": [
        "@typescript-eslint/eslint-plugin"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "ignorePatterns": ["dist"],
    "rules": {
        "camelcase": "warn",
        "no-console": "warn",
        "no-unused-vars": "warn",
        "@typescript-eslint/no-unused-vars": "error"
    }
}
